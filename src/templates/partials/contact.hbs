<div class="container-fluid">
    <div class="row " >
        <div class="col-12">
            <div class="row">
                <h1 id="form"  class="mt-5 mb-5 text-center mx-auto">Contact Us</h1>
                <form  action="/contact" method="POST" class="d-flex justify-content-center align-items-center flex-column mx-auto">
                    <div class="mb-3 1st-form gap-5 d-flex justify-content-center align-items-start">
                        <div>
                            <label for="exampleInputEmail1" class="form-label">First Name</label>
                            <input type="text" class="form-control" name="fname" />
                        </div>
                        <div>
                            <label for="exampleInputEmail1"  class="form-label">Last Name</label>
                            <input type="text"  class="form-control" name="lname" />
                        </div>
                    </div>

                    <div class="mb-3 2nd-form gap-5 d-flex justify-content-center align-items-start">
                        <div>

                            <label for="exampleInputPassword1" class="form-label">Email</label>
                            <input type="email"  class="form-control" name="email" />
                        </div>

                        <div>
                            <label for="exampleInputPassword1" class="form-label">Phone Number</label>
                            <input type="number" class="form-control" name="number" />
                        </div>
                    </div>
                    <div class="mb-3 d-flex justify-content-center align-items-start flex-column">
                        <label for="exampleInputPassword1" class="form-label">Message</label>
                        <textarea class="message" name="message"  id="message" cols="60" rows="5"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>